<section class="cc-section cc-image-with-text">
  <div class="cc-container cc-image-with-text__grid">
    {% if section.settings.image_position == 'left' %}
      <div class="cc-image-with-text__media">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: section.settings.heading }}
        {% else %}
          <div class="cc-hero__placeholder">
            {% render 'placeholder-mark' %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="cc-image-with-text__content">
      {% if section.settings.kicker != blank %}
        <p class="cc-kicker">{{ section.settings.kicker }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="cc-section-title">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.body != blank %}
        <div class="cc-richtext">
          {{ section.settings.body }}
        </div>
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="cc-button cc-button--secondary">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.image_position == 'right' %}
      <div class="cc-image-with-text__media">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: section.settings.heading }}
        {% else %}
          <div class="cc-hero__placeholder">
            {% render 'placeholder-mark' %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Story block",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Eyebrow text",
      "default": "The Crafty Crow lehenga studio"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Designed for every girl at the wedding"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text",
      "default": "<p>From pastel sangeet nights to bold reception looks, Crafty Crow lehengas are cut to twirl, lined for comfort and finished with clean, modern detailing. Think statement skirts, easy blouses and dupattas that actually stay in place.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Explore lehengas"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/lehenga-edit"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "right"
    }
  ],
  "presets": [
    {
      "name": "Story block"
    }
  ]
}
{% endschema %}

