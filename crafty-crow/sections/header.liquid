{% liquid
  assign spacing = settings.spacing_scale
  assign main_menu = section.settings.menu | default: linklists.main-menu
%}

<header class="cc-header{% if settings.header_sticky %} cc-header--sticky{% endif %}">
  {% if section.settings.enable_announcement and section.settings.announcement_text != blank %}
    <div class="cc-announcement">
      <div class="cc-container cc-announcement__inner">
        <span>{{ section.settings.announcement_text }}</span>
        {% if section.settings.announcement_link != blank and section.settings.announcement_link_label != blank %}
          <a href="{{ section.settings.announcement_link }}" class="cc-announcement__link">
            {{ section.settings.announcement_link_label }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endif %}
  <div class="cc-container cc-header__inner cc-header__inner--{{ spacing }}">
    <div class="cc-header__left">
      <a href="{{ routes.root_url }}" class="cc-logo" style="max-width: {{ settings.logo_width }}px;">
        {% if settings.use_image_logo and settings.logo_image != blank %}
          <img src="{{ settings.logo_image | image_url: width: settings.logo_width }}" alt="{{ shop.name }}" class="cc-logo__img">
        {% else %}
          <span class="cc-logo__text">{{ settings.logo_text }}</span>
        {% endif %}
      </a>
    </div>
    <nav class="cc-header__nav" aria-label="{{ 'layout.header.navigation' | t }}">
      {% if main_menu %}
        {% for link in main_menu.links %}
        <a href="{{ link.url }}" class="cc-header__link{% if link.active %} is-active{% endif %}">{{ link.title }}</a>
        {% endfor %}
      {% endif %}
    </nav>
    <div class="cc-header__right">
      {% if settings.header_show_search %}
        <a href="{{ routes.search_url }}" class="cc-icon-button" aria-label="{{ 'general.search.search' | t }}">
          {% render 'icon-search' %}
        </a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="cc-icon-button cc-cart-link" aria-label="{{ 'sections.header.cart' | t }}">
        {% render 'icon-cart' %}
        <span class="cc-cart-count" aria-hidden="true">
          {% if cart.item_count > 0 %}{{ cart.item_count }}{% endif %}
        </span>
      </a>
      <button class="cc-header__menu-toggle" type="button" aria-label="Toggle navigation" aria-expanded="false">
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
  <nav class="cc-header__mobile-nav" aria-label="{{ 'layout.header.navigation' | t }}">
    {% if main_menu %}
      {% for link in main_menu.links %}
      <a href="{{ link.url }}" class="cc-header__mobile-link{% if link.active %} is-active{% endif %}">{{ link.title }}</a>
      {% endfor %}
    {% endif %}
  </nav>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main menu"
    },
    {
      "type": "checkbox",
      "id": "enable_announcement",
      "label": "Show announcement bar",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on all lehengas within India"
    },
    {
      "type": "url",
      "id": "announcement_link",
      "label": "Announcement link"
    },
    {
      "type": "text",
      "id": "announcement_link_label",
      "label": "Announcement link label",
      "default": "Shop the lehenga edit"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}

